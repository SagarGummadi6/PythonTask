        #Python Operators

#program1:Area of rectangle
def AreaOfRectangle(l,b):
    area=l*b
    return area
input1 = input("Enter l and b with 1 space: ")
l, b = map(float, input1.split())
result = AreaOfRectangle(l, b)
print("Area of the rectangle is:", result)

#program1:Average
a1 = int(input("Enter number 1: "))
a2 = int(input("Enter number 2: "))
a3 = int(input("Enter number 3: "))
#print(type(a1))
avg=(a1+a2+a3)/3
print(avg)

#program2:Greater Number
num1=int(input("Enter 1st number: "))
num2=int(input("Enter 2nd number: "))
if num1>num2:
    print(f"{num1} is bigger than {num2}")
else:
    print(f"{num2} is bigger than {num1}")

#program2:Vote Eligible
age=int(input("Enter your age: "))
if age>=18:
    print("you are eligible to vote.")
else:
    print("you are not eligible to vote.")

#program3:Number in range
num3=int(input("Enter a number to check if it is the range(10 to 50): "))
if num3>10 and num3<50:
    print(f"{num3} is in the range 10 to 50.")
else:
    print(f"{num3} is not in the range 10 to 50.")

