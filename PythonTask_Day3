#program4:Assignment operator
num4=10
print(num4)
num4+=2
print(num4)
num4-=4
print(num4)
num4*=2
print(num4)
num4/=2
print(num4)

#program5:Bitwise operator
x=5
y=3
print("x & y= ",x & y)
print("x | y= ",x | y)
print("x ^ y= ",x ^ y)

        #Python Lists

#program1
MovieList=["Alien","Dune","Argo","Titanic","Inception"]
print(MovieList[0])
print(MovieList[-1])

#program2
MovieList.append("Avatar")
print(MovieList)
MovieList[2]="Parasite"
print(MovieList)

#program3
MovieList.sort()
print(MovieList)
list1=["one","two","three"]
print(list1)
list1.append("four")
print(list1)
list1.insert(-1,"five")
print(list1)
list1.remove("five")
print(list1)
list1.pop(0)
print(list1)
list1.reverse()
print(list1)

#program4
MovieList.append("Shrek")
for a in MovieList:
    print(a)


for movie in MovieList:
    if movie.startswith("s"):
        print(f"Movie stats with s: {movie}")

#program5
squares = [x**2 for x in range(1, 11)]
print(squares)
even=[]
for x in squares:
    if x%2==0:
        even.append(x)
print(even)

